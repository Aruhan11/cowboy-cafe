<UserControl x:Class="PointOfSale.CustomizePandeCampo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Dakota Double Burger"/>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path=Bread}">Bun</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Ketchup</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Mustard</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Pickle</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Cheese</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Tomato</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Lettuce</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Mayo</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
