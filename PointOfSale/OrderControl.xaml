<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30px"/>
            <Setter Property="Width" Value="120px"/>
            <Setter Property="FontSize" Value="15"/>
            
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
               
                
            </Grid.ColumnDefinitions>
            <Button Name="ItemSelection" Grid.Column="0" HorizontalAlignment="Center">Item Selection</Button>
            <Button Name="CancelOrder" Grid.Column="1" HorizontalAlignment="Center">Cancel Order</Button>
            <Button Name="CompleteOrder" Grid.Column="2" HorizontalAlignment="Center">Complete Order</Button>
        </Grid>

        <local:MenuItemSelectionControl DockPanel.Dock="Left"  >
        </local:MenuItemSelectionControl>
        
        <local:OrderSummaryControl>
        </local:OrderSummaryControl>
    </DockPanel>


</UserControl>
